<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/data_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="6dp">

                <TextView
                    android:id="@+id/apm_set_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barcode"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/apm_categories_spn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/category_list"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product Name"
                        android:inputType="text"
                        app:met_iconLeft="@drawable/ic_add_product"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        app:met_iconLeft="@drawable/ic_description"
                        android:lines="5"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_selling_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Selling Price"
                        android:inputType="numberDecimal"
                        app:met_iconLeft="@drawable/ic_rupees"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_mrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="M.R.P"
                        android:inputType="numberDecimal"
                        app:met_iconLeft="@drawable/ic_rupees"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_market_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop Name"
                        android:inputType="text"
                        app:met_iconLeft="@drawable/ic_shoping"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                    <AutoCompleteTextView
                        android:id="@+id/apm_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:inputType="text"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="16dp"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/apm_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pin Code"
                        android:inputType="number"
                        app:met_iconLeft="@drawable/ic_pincode"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/apm_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Submit Data"
                android:layout_marginRight="12dp"/>

        </LinearLayout>

        <TextView
            android:layout_below="@+id/data_form"
            android:text="@string/data_form_str"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>

</ScrollView>